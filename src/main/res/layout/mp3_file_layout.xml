<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mp3_file_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="8dp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mp3_file_cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/relativeLayout"
            android:layout_toStartOf="@+id/file_duration_container"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/mp3_file_name"
                style="@style/PrimaryDarkText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="song name" />

            <TextView
                android:id="@+id/mp3_file_data_info"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="song data" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/file_duration_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/mp3_file_duration"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="04:44" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
